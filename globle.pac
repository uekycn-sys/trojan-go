function FindProxyForURL(url, host) {
    // ---------------------------------------------------------
    // 1. 定义代理地址 (SOCKS5 127.0.0.1:1080)
    // ---------------------------------------------------------
    var proxy = "SOCKS5 127.0.0.1:1080; SOCKS 127.0.0.1:1080";

    // ---------------------------------------------------------
    // 2. 必须保留的本地防死循环规则 (安全网)
    // ---------------------------------------------------------
    // 如果不加这一段，你访问 http://localhost 或 127.0.0.1 也会走代理，
    // 这会导致本地服务无法访问，甚至导致代理软件自身崩溃。
    if (isPlainHostName(host) || 
        host === "127.0.0.1" || 
        host === "localhost" || 
        host === "::1") {
        return "DIRECT";
    }

    // ---------------------------------------------------------
    // 3. 暴力全局：除本地外，一切流量走 SOCKS5
    // ---------------------------------------------------------
    // 不做任何 CN 域名判断，不做任何 IP 判断。
    // 浏览器会直接把域名扔给代理服务器解析 (Remote DNS)。
    return proxy;
}
